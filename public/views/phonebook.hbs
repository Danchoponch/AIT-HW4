<h1>PhoneBook</h1>

<form action="/phonebook" method="GET" style="margin-bottom: 20px;">
  <input type="text" name="contact" placeholder="Search contacts..." required>
  <button type="submit">Search</button>
</form>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone Number(s)</th>
    </tr>
  </thead>
  <tbody>
    {{#each initContacts}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      <td>
        <ul>
          {{#each this.phoneNumbers}}
          <li>{{this}}</li>
          {{/each}}
        </ul>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<h2>Add a New Contact</h2>
<form action="/phonebook" method="POST">
  <label for="name">Name:</label>
  <input type="text" id="name" name="name" required><br><br>

  <label for="email">Email:</label>
  <input type="email" id="email" name="email" required><br><br>

  <label for="phoneNumbers">Phone Numbers (comma-separated):</label>
  <input type="text" id="phoneNumbers" name="phoneNumbers" required><br><br>

  <button type="submit">Add Contact</button>
</form>